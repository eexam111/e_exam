<main>
    <section class="notice-board">
        <h2>Notice Board</h2>
        <div id="notice-container">
            <!-- Notice items will be dynamically loaded here using JavaScript -->
        </div>
    </section>

        <section class="schedule">
            <h2>Schedule</h2>
            <div class="schedule-items">
                <% if (locals.scheduleData && locals.scheduleData.length > 0) { %>
                    <% locals.scheduleData.forEach(scheduleItem => { %>
                        <div class="schedule-item">
                            <h3><%= scheduleItem.time %></h3>
                            <p><%= scheduleItem.notes %></p>
                            <!-- Add more details as needed -->
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No schedule data available.</p>
                <% } %>
            </div>
        </section>
    
    <section class="community">
        <h2>Community</h2>
        <div class="chat-box">
            <div class="chat-header">
                Community Chat
            </div>
            <div class="chat-messages">
                <!-- Chat messages will appear here -->
            </div>
            <div class="chat-input">
                <input type="text" placeholder="Type your message...">
                <button id="send-message-btn">Send</button> <!-- Use JavaScript to handle sending message -->
            </div>
        </div>
    </section>
</main>
<script>
    // Dynamically load notice board items
window.addEventListener('DOMContentLoaded', () => {
    const noticeContainer = document.getElementById('notice-container');
    const noticeData = [
        { id: 1, content: 'Notice 1' },
        { id: 2, content: 'Notice 2' },
        { id: 3, content: 'Notice 3' }
        // Add more notice items as needed
    ];

    noticeData.forEach(noticeItem => {
        const noticeElement = document.createElement('div');
        noticeElement.classList.add('notice-item');
        noticeElement.innerHTML = `
            <p>${noticeItem.content}</p>
        `;
        noticeContainer.appendChild(noticeElement);
    });
});

// Handle sending chat messages
const chatMessages = document.querySelector('.chat-messages');
const chatInput = document.querySelector('.chat-input input');
const sendMessageBtn = document.getElementById('send-message-btn');

sendMessageBtn.addEventListener('click', () => {
    const message = chatInput.value.trim();
    if (message !== '') {
        const messageElement = document.createElement('div');
        messageElement.classList.add('chat-message');
        messageElement.innerHTML = `
            <p>${message}</p>
        `;
        chatMessages.appendChild(messageElement);
        chatInput.value = '';
    }
});

</script>